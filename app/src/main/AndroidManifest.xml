<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.ilago_project.timeUp_ManagerTime">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/appActivityTheme">
        <activity android:name="by.ilago_project.timeUp_ManagerTime.MainAppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="by.ilago_project.timeUp_ManagerTime.ActivityViewTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>
        <activity android:name="by.ilago_project.timeUp_ManagerTime.ActivityViewEditorTask"
            android:theme="@style/appThemeEditorActivity">
            <intent-filter>
                <action android:name="android.intent.action.EDIT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>