<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/standartPaddingLeftRight"
    android:paddingRight="@dimen/standartPaddingLeftRight"
    android:paddingBottom="@dimen/standartPaddingTopBottom">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fieldCheckList" />

    <ListView
        android:divider="@color/FocusFieldApp"
        android:dividerHeight="1dp"
        android:id="@+id/underTaskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="@dimen/marginRowField" />

    <LinearLayout
        android:id="@+id/panelControlCheckList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBetweenField"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addCheckTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="@string/app_add" />

        <Button
            android:id="@+id/clearCheckTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/app_clear" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/panelCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBetweenField"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fieldEditCounter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/addCounterButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_button_positive_flat"/>
            <include
                layout="@layout/item_count_series"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/subCounterButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_button_negativy_flat"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fieldNotifycation" />

    <ListView
        android:id="@+id/notifyList"
        android:divider="@color/FocusFieldApp"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginRowField" />

    <LinearLayout
        android:id="@+id/panelNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBetweenField"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="@string/app_add" />

        <Button
            android:id="@+id/clearNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/app_clear" />
    </LinearLayout>

</LinearLayout>