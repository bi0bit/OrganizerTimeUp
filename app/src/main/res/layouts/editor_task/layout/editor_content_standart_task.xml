<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/standartPaddingLeftRight"
    android:paddingRight="@dimen/standartPaddingLeftRight"
    android:paddingBottom="@dimen/standartPaddingTopBottom">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fieldCheckList" />

    <ListView
        android:divider="@color/colorFocusFieldApp"
        android:dividerHeight="1dp"
        android:id="@+id/underTaskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="@dimen/marginRowField" />

    <LinearLayout
        android:id="@+id/panelControlCheckList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addCheckTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="@string/app_add" />

        <Button
            android:id="@+id/clearCheckTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/app_clear" />
    </LinearLayout>

    <include
        layout="@layout/item_count_series"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fieldNotifycation" />

    <ListView
        android:id="@+id/notifyList"
        android:divider="@color/colorFocusFieldApp"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginRowField" />

    <LinearLayout
        android:id="@+id/panelNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="@string/app_add" />

        <Button
            android:id="@+id/clearNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/app_clear" />
    </LinearLayout>

</LinearLayout>