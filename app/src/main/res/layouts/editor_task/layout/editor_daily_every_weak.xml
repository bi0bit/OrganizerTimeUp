<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="java.util.Calendar"/>
        <import type="java.text.DateFormatSymbols"/>
        <import type="android.widget.CheckedTextView"/>
        <variable
            name="task"
            type="AssambleClassManagmentTime.Daily"/>
    </data>
    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expand_weak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xxsmall"
            android:text="@string/fieldEvery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/chMonday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@null"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_xlarge"
                android:text="@{DateFormatSymbols.getInstance().getShortWeekdays()[2]}"
                android:onClick="@{task::onClickItemDayWeekly}"
                android:drawableLeft="@null"
                android:drawableRight="@null"
                android:textColor="@drawable/selector_checked_text"
                android:checked="@{task.isHaveDaysWeekInDates(Calendar.MONDAY)}"/>
            <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/chTuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@null"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_xlarge"
                android:text="@{DateFormatSymbols.getInstance().getShortWeekdays()[3]}"
                android:onClick="@{task::onClickItemDayWeekly}"
                android:drawableLeft="@null"
                android:drawableRight="@null"
                android:textColor="@drawable/selector_checked_text"
                android:checked="@{task.isHaveDaysWeekInDates(Calendar.TUESDAY)}"/>
            <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/chWednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@null"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_xlarge"
                android:text="@{DateFormatSymbols.getInstance().getShortWeekdays()[4]}"
                android:onClick="@{task::onClickItemDayWeekly}"
                android:drawableLeft="@null"
                android:drawableRight="@null"
                android:textColor="@drawable/selector_checked_text"
                android:checked="@{task.isHaveDaysWeekInDates(Calendar.WEDNESDAY)}"/>
            <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/chThursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@null"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_xlarge"
                android:text="@{DateFormatSymbols.getInstance().getShortWeekdays()[5]}"
                android:onClick="@{task::onClickItemDayWeekly}"
                android:drawableLeft="@null"
                android:drawableRight="@null"
                android:textColor="@drawable/selector_checked_text"
                android:checked="@{task.isHaveDaysWeekInDates(Calendar.THURSDAY)}"/>
            <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/chFriday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@null"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_xlarge"
                android:text="@{DateFormatSymbols.getInstance().getShortWeekdays()[6]}"
                android:onClick="@{task::onClickItemDayWeekly}"
                android:drawableLeft="@null"
                android:drawableRight="@null"
                android:textColor="@drawable/selector_checked_text"
                android:checked="@{task.isHaveDaysWeekInDates(Calendar.FRIDAY)}"/>
            <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/chSaturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@null"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_xlarge"
                android:text="@{DateFormatSymbols.getInstance().getShortWeekdays()[7]}"
                android:onClick="@{task::onClickItemDayWeekly}"
                android:drawableLeft="@null"
                android:drawableRight="@null"
                android:textColor="@drawable/selector_checked_text"
                android:checked="@{task.isHaveDaysWeekInDates(Calendar.SATURDAY)}"/>
            <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/chSunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@null"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_xlarge"
                android:text="@{DateFormatSymbols.getInstance().getShortWeekdays()[1]}"
                android:onClick="@{task::onClickItemDayWeekly}"
                android:drawableLeft="@null"
                android:drawableRight="@null"
                android:textColor="@drawable/selector_checked_text"
                android:checked="@{task.isHaveDaysWeekInDates(Calendar.SUNDAY)}"/>
        </LinearLayout>
    </com.github.aakira.expandablelayout.ExpandableLinearLayout>
</layout>