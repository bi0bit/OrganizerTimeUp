<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_xsmall"
    android:paddingRight="@dimen/spacing_xsmall"
    android:paddingBottom="@dimen/spacing_xsmall">



    <LinearLayout
        android:id="@+id/panelControlCheckList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xsmall"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fieldCheckList" />
        <ListView
            android:divider="@color/FocusFieldApp"
            android:dividerHeight="@dimen/divider_weight"
            android:id="@+id/underTaskList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_xsmall">
            <Button
                android:id="@+id/addCheckTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_xsmall"
                android:layout_weight="1"
                android:text="@string/app_add" />

            <Button
                android:id="@+id/clearCheckTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/app_clear" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/panelCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xsmall"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fieldEditCounter" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/addCounterButton"
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_button_positive_flat"/>
            <include
                layout="@layout/item_count_series"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/subCounterButton"
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_button_negativy_flat"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xsmall"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fieldNotifycation" />
        <ListView
            android:id="@+id/notifyList"
            android:divider="@color/FocusFieldApp"
            android:dividerHeight="@dimen/divider_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_xsmall">
            <Button
                android:id="@+id/addNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_xsmall"
                android:layout_weight="1"
                android:text="@string/app_add" />

            <Button
                android:id="@+id/clearNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/app_clear" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xsmall"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fieldTag" />
        <ListView
            android:id="@+id/tagList"
            android:divider="@color/FocusFieldApp"
            android:dividerHeight="@dimen/divider_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>