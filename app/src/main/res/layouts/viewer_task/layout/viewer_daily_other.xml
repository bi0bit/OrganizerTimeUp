<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="task"
            type="AssambleClassManagmentTime.Daily"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="inherit"
            android:text="@string/fieldEvery"
            android:textColor="@color/TextApp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextApp"
            android:layout_marginLeft="@dimen/spacing_xxsmall"
            android:text="@{String.valueOf(task.getEvery())}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="inherit"
            android:textColor="@color/TextApp"
            android:layout_marginLeft="@dimen/spacing_xxsmall"
            android:text="@{task.getStringTypeDailyPeriod(context)}"/>
    </LinearLayout>
</layout>