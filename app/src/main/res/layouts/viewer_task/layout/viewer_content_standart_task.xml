<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/standartPaddingLeftRight"
    android:paddingRight="@dimen/standartPaddingLeftRight"
    android:paddingBottom="@dimen/standartPaddingTopBottom">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Уведомления:"/>
    <ListView
        android:id="@+id/listNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Будильники:"/>
    <ListView
        android:id="@+id/listAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>