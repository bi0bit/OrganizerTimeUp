<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/standartPaddingLeftRight"
    android:paddingRight="@dimen/standartPaddingLeftRight"
    android:paddingBottom="@dimen/standartPaddingTopBottom">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fieldCheckList"/>
    <ListView
        android:id="@+id/checkListTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/panelCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBetweenField"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fieldCounter" />
        <include
            layout="@layout/item_count_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fieldNotifycation"/>
    <ListView
        android:id="@+id/notifyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>