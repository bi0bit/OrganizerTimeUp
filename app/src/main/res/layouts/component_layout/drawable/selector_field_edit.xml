<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_focused="false">
         <shape xmlns:android="http://schemas.android.com/apk/res/android"
             android:shape="rectangle">
             <stroke android:color="@color/colorFieldApp" android:width="@dimen/borderWeight"/>
             <corners
                 android:radius="6dp" />
             <padding android:bottom="5dp"
                 android:left="7dp"
                 android:right="5dp"
                 android:top="5dp" />
         </shape>
     </item>
     <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke android:color="@color/colorFocusFieldApp" android:width="@dimen/borderWeight"/>
            <corners
                android:radius="6dp" />
            <padding android:bottom="5dp"
                android:left="7dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
     </item>
</selector>