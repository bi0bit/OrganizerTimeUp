<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/marginBetweenField"
    android:paddingTop="@dimen/marginBetweenField">
    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/v_clock"
        app:srcCompat="@drawable/v_clock"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="@dimen/textSize_Field"
            android:textColor="@color/TextApp"
            android:textAlignment="inherit"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="title" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textSize="@dimen/textSize_Field"
            android:textColor="@color/TextApp"
            android:textAlignment="inherit"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="00:00" />
    </LinearLayout>

    <Button
        android:id="@+id/editButton"
        android:background="@drawable/selector_edit_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="14dp"/>
    <Button
        android:id="@+id/deleteButton"
        android:background="@drawable/selector_delete_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="7dp"/>
</LinearLayout>