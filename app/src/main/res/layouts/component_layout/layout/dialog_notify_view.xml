<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/root"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/spacing_xsmall">
        <TextView
            android:text="@string/fieldTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_normal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="@dimen/spacing_xsmall"/>
        <EditText
            style="@style/EditorTextTheme"
            android:id="@+id/title_notify"
            android:maxLines="1"
            android:maxLength="50"
            android:textSize="@dimen/textSize_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xsmall">
        </EditText>

        <TextView
            android:text="@string/fieldMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_normal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="@dimen/spacing_xsmall"/>
        <EditText
            style="@style/EditorTextTheme"
            android:id="@+id/message_notify"
            android:maxLines="2"
            android:maxLength="100"
            android:textSize="@dimen/textSize_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xsmall">
        </EditText>
        <LinearLayout
            android:id="@+id/panelTime"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xsmall">
            <TextView
                android:text="@string/fieldTimeNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_xsmall"/>
            <TextView
                android:id="@+id/time"
                android:text="time1"
                android:layout_weight="2"
                android:textColor="@color/TextApp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/buttonSelectTime"
                style="@style/buttonStyle"
                android:text="@string/app_select"
                android:textSize="@dimen/textSize_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_xlarge" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/panelDate"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/fieldDateNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_xsmall"/>
            <TextView
                android:id="@+id/date"
                android:text="date1"
                android:layout_weight="2"
                android:textColor="@color/TextApp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/buttonSelectDate"
                style="@style/buttonStyle"
                android:text="@string/app_select"
                android:textSize="@dimen/textSize_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_xlarge" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>