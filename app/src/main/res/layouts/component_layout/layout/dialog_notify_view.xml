<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">
    <TextView
        android:text="@string/fieldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="12dp"/>
    <EditText
        style="@style/EditorTextTheme"
        android:id="@+id/title_notify"
        android:maxLines="1"
        android:maxLength="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standartPaddingTopBottom">
    </EditText>

    <TextView
        android:text="@string/fieldMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="12dp"/>
    <EditText
        style="@style/EditorTextTheme"
        android:id="@+id/message_notify"
        android:maxLines="2"
        android:maxLength="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standartPaddingTopBottom">
    </EditText>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standartPaddingTopBottom">
        <TextView
            android:text="@string/fieldTimeNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"/>
        <TextView
            android:id="@+id/time"
            android:text="time1"
            android:layout_weight="2"
            android:textColor="@color/TextApp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonSelectTime"
            style="@style/buttonStyle"
            android:text="@string/app_select"
            android:layout_width="wrap_content"
            android:layout_height="34dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/fieldDateNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"/>
        <TextView
            android:id="@+id/date"
            android:text="date1"
            android:layout_weight="2"
            android:textColor="@color/TextApp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonSelectDate"
            style="@style/buttonStyle"
            android:text="@string/app_select"
            android:layout_width="wrap_content"
            android:layout_height="34dp" />
    </LinearLayout>
</LinearLayout>