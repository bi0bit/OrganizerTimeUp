<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/spacing_xsmall"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switchActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xxsmall"
            android:text="@string/actualTask" />

        <Switch
            android:id="@+id/switchNoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xxsmall"
            android:text="@string/filterNonComplete" />
        <Switch
            android:id="@+id/switchPriority"
            android:text="@string/filterPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/expandablePriority"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/listPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>
        <Switch
            android:id="@+id/switchTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filterTag" />
        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/expandableTags"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/listTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>
    </LinearLayout>
</ScrollView>
