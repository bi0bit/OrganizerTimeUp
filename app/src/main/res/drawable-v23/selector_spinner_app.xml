<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <stroke android:color="@color/FieldApp" android:width="@dimen/border_weight"/>
                    <corners
                        android:radius="6dp" />
                    <padding android:bottom="4dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="4dp" />
                </shape>
            </item>
            <item android:gravity="center_vertical|right" android:drawable="@drawable/v_arrow_down"/>
        </layer-list>
    </item>
</selector>